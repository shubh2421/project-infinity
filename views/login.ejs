<%- include ("./partials/header"); %>

    <body>
        <div class="login-box">
            <img src="logo_0.36571100 1592896939.png" alt="" class="avatar" />

            <div class="dropdown">
                <select name="role" id="role" placeholder="Role" class="dropbtn" aria-required="true">
                    <option value="">Role</option>
                    <option value="Distributor">Distributor</option>
                    <option value="Dealer">Dealer</option>
                    <option value="professional">Professional</option>
                    <option value="student">Student</option>
                    <option value="Carpenter">Carpenter</option>
                </select>
            </div>

            <div class="tab-content">
                <form class="form" id="login">
                    <div class="form__message form__message--error"></div>
                    <div class="textbox">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input type="text" id="username" autofocus placeholder="User id" name="" value="" />
                    </div>

                    <div class="textbox">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input type="password" id="password" placeholder="Password" name="" value="" />
                    </div>

                    <div class="remember_me">
                        <input type="checkbox" id="remember_me" />
                        <label for="remember_me">Remember me</label>
                    </div>

                    <p class="form__text">
                        <a href="#" class="form__link">Forgot password</a>
                    </p>

                    <p class="form__text">
                        <a id="linkCreateAccount" href="./" class="form__link">Don't have an account? Create account</a>
                    </p>

                    <button class="btn" type="submit">
                        <b>Sign-In</b>
                    </button>
                    <p class="form__text">
                        <a id="" href="./" class="form__assistance">Contact for Assistance</a>
                    </p>
                </form>

            </div>
        </div>
    </body>